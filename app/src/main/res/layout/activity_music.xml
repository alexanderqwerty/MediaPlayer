<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MusicActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5">

        <ImageView
            android:id="@+id/IV_ms"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="40dp"
            android:src="@drawable/ic_image" />
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4">
        <TextView
            android:id="@+id/TV_name_ms"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textSize="30sp"
            />
        <ImageButton
            android:id="@+id/IB_repeat"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            android:layout_marginBottom="40dp"
            android:layout_marginStart="10dp"
            android:background="@color/cardview_light_background"
            android:src="@drawable/ic_repeat"/>

        <ImageButton
            android:id="@+id/IB_ms_pause_resume"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:background="@color/cardview_light_background"
            android:src="@drawable/ic_pause" />

        <ImageButton
            android:id="@+id/IB_ms_back_track"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:layout_marginEnd="100dp"
            android:background="@color/cardview_light_background"
            android:src="@drawable/ic_back_ms_left" />

        <ImageButton
            android:id="@+id/IB_ms_next_track"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:layout_marginStart="100dp"
            android:background="@color/cardview_light_background"
            android:src="@drawable/ic_next_ms_right" />

    </FrameLayout>
</LinearLayout>